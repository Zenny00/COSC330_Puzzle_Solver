<?xml version="1.0" encoding="utf-8"?>

<!-- LAYOUT CONFIGURATION -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/puzzle_background_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- INTERIOR LAYOUT TO HOLD ALL PUZZLE ELEMENTS -->

    <RelativeLayout
        android:id="@+id/puzzle_layout"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <!-- USER INPUT IS DISPLAYED HERE -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/puzzle_input"
            android:layout_marginTop="@dimen/puzzle_margin"
            android:background="@color/input_background_gray"
            android:tint="@color/button_text"
            android:padding="1dp"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/puzzle_input_width"
            android:layout_height="@dimen/puzzle_input_height" />

        <!-- HOLDS THE LOCK ICON -->
        <ImageView
            android:id="@+id/lock_icon"
            android:layout_below="@id/puzzle_input"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/puzzle_margin"
            android:src="@drawable/lock_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- LAUNCHES CONVERTER ACTIVITY -->
        <Button
            android:id="@+id/open_btn"
            android:backgroundTint="@color/button_red"
            android:textColor="@color/button_text"
            android:layout_below="@id/lock_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/btn_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_btn_text" />
    </RelativeLayout>

    <TextView
        android:textColor="@color/button_text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/puzzle_solution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/puzzle_layout"
        android:layout_marginTop="25dp"
        android:text="@string/puzzle_solution"/>

    <Button
        android:id="@+id/solve_puzzle"
        android:backgroundTint="@color/button_red"
        android:textColor="@color/button_text"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/puzzle_input_height"
        android:layout_below="@id/puzzle_solution"
        android:text="@string/solve_btn_text" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<!-- LAYOUT CONFIGURATION -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- INTERIOR LAYOUT TO HOLD ALL PUZZLE ELEMENTS -->

    <RelativeLayout
        android:id="@+id/puzzle_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/puzzle_input"
            android:layout_marginTop="@dimen/puzzle_margin"
            android:layout_centerHorizontal="true"
            android:text="@string/default_puzzle"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- HOLDS THE LOCK ICON -->
        <ImageView
            android:id="@+id/lock_image"
            android:layout_below="@id/puzzle_input"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="500dp" />

        <!-- LAUNCHES CONVERTER ACTIVITY -->
        <Button
            android:id="@+id/open_btn"
            android:layout_below="@id/lock_image"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_btn_text" />
    </RelativeLayout>

</RelativeLayout>